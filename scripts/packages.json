{
  "options": {},
  "packages": [
    {
      "name": "Eigen3",
      "targets": "Eigen3::Eigen",
      "url": "gl:libeigen/eigen",
      "enable_prebuild": true,
      "version": "3.4.0",
      "tag": "${version}",
      "cmake_args": [
        "EIGEN_BUILD_DOC OFF",
        "BUILD_TESTING OFF"
      ],
      "patch": [
        "cholmod.patch"
      ]
    },
    {
      "name": "autodiff",
      "targets": "autodiff::autodiff",
      "url": "gh:autodiff/autodiff",
      "enable_prebuild": true,
      "version": "1.0.3",
      "tag": "v${version}",
      "cmake_args": [
        "AUTODIFF_BUILD_TESTS OFF",
        "AUTODIFF_BUILD_PYTHON OFF",
        "AUTODIFF_BUILD_EXAMPLES OFF",
        "AUTODIFF_BUILD_DOCS OFF"
      ],
      "patch": [
        "num_traits.patch"
      ]
    },
    {
      "name": "fmt",
      "targets": "fmt::fmt",
      "url": "gh:fmtlib/fmt",
      "enable_prebuild": true,
      "version": "9.1.0",
      "tag": "${version}",
      "cmake_args": [
        "FMT_DOC OFF",
        "FMT_TEST OFF"
      ],
      "prebuild_cmake_args": [
        "FMT_INSTALL ON"
      ],
      "non_prebuild_cmake_args": [
        "FMT_INSTALL OFF"
      ]
    }
  ]
}
